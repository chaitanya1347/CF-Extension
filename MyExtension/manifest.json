{
    "manifest_version": 3,
    "name": "Codeforces Submission Stalker",
    "version": "1.0",
    "description": "Get status of your friends' recent submissions on codeforces",
    "content_scripts": [
        {   
            "js": ["scripts/content.js", "scripts/popup-script.js"],
            "matches": ["https://codeforces.com/*"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": ["storage" ,"activeTab"]

}