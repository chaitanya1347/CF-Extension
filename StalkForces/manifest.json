{
    "manifest_version": 3,
    "name": "StalkForces",
    "version": "1.0",
    "description": "Get status of your friends' recent submissions on codeforces",
    "content_scripts": [
        {   
            "js": ["scripts/content.js", "scripts/popup-script.js"],
            "matches": ["https://codeforces.com/*"]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": ["storage"]

}